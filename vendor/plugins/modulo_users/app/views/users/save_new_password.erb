<h1><%= t("user.save_new_password") %></h1>

<%= render "commons/error_messages", :target => @user %>

<% form_tag(save_new_password_user_path(@user, :token => params[:token]), :method => :post) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= hidden_field_tag :token, params[:token] %>

        <div>
          <label for="user_password"><strong><%= t("password") %>: </strong></label>
          <%= password_field :user, :password %>
        </div>

        <div>
          <label for="user_password_confirmation"><strong><%= t("confirm_password") %>: </strong></label>
          <%= password_field :user, :password_confirmation %>
        </div>

        <div class="botones">
          <div>
            <%= submit_tag t("save"), :class => 'boton', :title => t("user.save_new_password") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>