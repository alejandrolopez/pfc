<h1><%= t("user.forget_password")%></h1>

<%= raw format_notice(flash[:notice]) %>
<%= raw format_error(flash[:error])%>

<% form_tag(remember_password_users_path, :method => :post) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <div>
          <label for="email"><strong><%= t("email") %>: </strong></label>
          <%= text_field_tag "email" %>
        </div>

        <div class="botones">
          <div>
            <%= submit_tag t("user.send_new_password"), :class => 'boton', :title => t("user.send_new_password") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>