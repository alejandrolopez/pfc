<h1><%= t("user.list")%></h1>

<%= raw format_notice(flash[:notice]) %>
<%= raw format_error(flash[:error])%>

<table>
  <tr>
    <th><%= sortable "name", t("name") %></th>
    <th><%= sortable "surname1", t("surname1") %></th>
    <th><%= sortable "surname2", t("surname2") %></th>
    <th><%= sortable "email", t("mail") %></th>
    <th><%= t("actions") %></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.surname1 %></td>
      <td><%= user.surname2 %></td>
      <td><%= user.email %></td>
      <td class="acciones">
        <%= link_to t("show"), user_path(user), :title => t("user.show") %>
        <%= link_to t("edit"), edit_user_path(user), :title => t("user.edit") %>
        <% unless user.system? %>
          <%= link_to t("destroy"), user, :confirm => t("user.destroy?"), :method => :delete, :title => t("user.destroy")  %>
        <% end -%>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users %>

<div class="cms">
  <%= link_to t("user.new"), new_user_path, :title => t("user.new") %>
</div>