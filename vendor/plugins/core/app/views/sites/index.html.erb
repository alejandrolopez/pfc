<h1><%= t("site.list") %></h1>

<%= raw format_notice(flash[:notice]) %>
<%= raw format_error(flash[:error]) %>

<table>
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("domain") %></th>
    <th><%= t("actions") %></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%=h site.name %></td>
    <td><%=h site.domain %></td>
    <td>
      <%= link_to t("show"), site %>
      <%= link_to t("edit"), edit_site_path(site) %>
      <%= link_to t("destroy"), site, :confirm => t("site.destroy?"), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t("site.new"), new_site_path %>