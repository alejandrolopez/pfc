<h1><%= t("site.new") %></h1>

<%= render "commons/error_messages", :target => @site %>

<% form_tag(sites_path, :method => :post) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("create"), :title => t("site.create")  %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), sites_path, :class => "back" %>