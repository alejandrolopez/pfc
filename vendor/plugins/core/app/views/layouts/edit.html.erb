<h1><%= t("layout.edit") %></h1>

<%= render "commons/error_messages", :target => @layout %>

<% form_tag(layout_path(@layout), :method => :put) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("update"), :title => t("layout.update") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), layouts_path, :class => "back" %>