<h2><%= t("layout.administer_blocks") %></h2>

<%= raw format_notice(flash[:notice]) %>
<%= raw format_error(flash[:error]) %>

<% form_tag(update_blocks_layout_path(@layout), :method => :post) do %>
  <% hidden_field :layout, :id %>
  <% for block in @blocks %>
    <div>
      <label for="block"><%= block.name %>:</label>
      <%= select "block", "[#{block.id}]element_id", @elements.collect{|e| [e.name, e.id]}, :selected => block.element_id %>
    </div>
  <% end %>

  <div class="botones">
    <%= submit_tag t("update"), :title => t("layout.update_blocks") %>
  </div>
<% end %>

<%= link_to t("back"), layouts_path, :class => "back", :title => t("back") %>