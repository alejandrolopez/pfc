<h1><%= t("blog.edit") %></h1>

<%= render "commons/error_messages", :target => @blog %>

<% form_tag(blog_path(@noticia), :method => :put) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("update"), :title => t("blog.update") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), blogs_path, :class => "back" %>