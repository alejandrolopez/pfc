<h1><%= t("post.edit") %></h1>

<%= render "commons/error_messages", :target => @post %>

<% form_tag(blog_post_path(@blog, @post), :method => :put) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("update"), :title => t("post.update") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), blog_posts_path(@blog), :class => "back" %>