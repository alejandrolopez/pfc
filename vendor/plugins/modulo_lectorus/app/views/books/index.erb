<h1><%= t("book.list") %></h1>

<%= raw format_notice(flash[:notice]) %>
<%= raw format_error(flash[:error]) %>

<table>
  <tr>
    <th><%= sortable "title", t("title") %></th>
    <th><%= t("actions") %></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td class="acciones">
        <%= link_to t("show"), book_path(book), :title => t("book.show") %>
        <%= link_to t("edit"), edit_book_path(book), :title => t("book.edit") %>
        <%= link_to t("destroy"), book_path(book), :confirm => t("book.destroy?"), :method => :delete, :title => t("book.destroy") %>
      </td>
    </tr>
  <% end %>
</table>

<div class="admin-links">
  <%= link_to t("book.new"), new_book_path %>
</div>