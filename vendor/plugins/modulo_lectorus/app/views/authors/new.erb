<h1><%= t("author.new") %></h1>

<%= render "commons/error_messages", :target => @author %>

<%= form_tag(authors_path, :method => :post) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("create"), :title => t("author.create")  %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), authors_path, :class => "back" %>