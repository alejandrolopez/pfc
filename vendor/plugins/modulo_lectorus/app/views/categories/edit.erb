<h1><%= t("category.edit") %></h1>

<%= render "commons/error_messages", :target => @category %>

<%= form_tag(category_path(@category), :method => :put) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => "form" %>

        <div class="botones">
          <div>
            <%= submit_tag t("update"), :title => t("category.update") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), list_categories_path, :class => "back" %>