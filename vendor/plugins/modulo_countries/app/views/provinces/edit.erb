<h1><%= t("province.edit") %></h1>

<%= render "commons/error_messages", :target => @province %>

<% form_tag(country_province_path(@country, @province, :page => params[:page]), :method => :put) do %>
  <div class="formulario">
    <div class="formulario-top">
      <div class="formulario-bottom">
        <%= render :partial => 'form' %>
        <div class="botones">
          <div>
            <%= submit_tag t("save"), :class => 'boton', :title => t("province.save") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to t("back"), country_provinces_path(@country, :page => params[:page]), :title => t("back") %>